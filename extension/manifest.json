{
  "manifest_version": 3,
  "name": "Ecosystem Scraper",
  "version": "2.0.0",
  "description": "Config-driven scraper for blockchain ecosystem directories. Supports DefiLlama, DappRadar, CoinGecko, AptoFolio, AwesomeNEAR, NEARCatalog, and more.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["config/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scraper-engine.js"],
      "run_at": "document_idle"
    }
  ]
}
